# Caddyfile for ORFinishes Dashboard
# This configuration sets up Caddy as a reverse proxy for the dashboard application

# Global options
{
    # Enable automatic HTTPS (default behavior)
    # Log level
    log {
        level INFO
    }
}

# Main dashboard site
:80 {
    # Reverse proxy to the dashboard container
    reverse_proxy dashboard:3000 {
        # Health check
        health_uri /api/hello
        health_interval 30s
        health_timeout 5s
        
        # Load balancing (if you scale the dashboard service)
        lb_policy round_robin
        
        # Headers
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Enable compression
    encode gzip
    
    # Security headers
    header {
        # Security headers
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        
        # Remove server header
        -Server
    }
    
    # Handle client-side routing (SPA)
    try_files {path} /
    
    # Cache static assets
    @static {
        path *.js *.css *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000"
    
    # Logging
    log {
        output file /var/log/caddy/access.log
        format json
    }
}

# HTTPS configuration for admin.orfinishes.com
admin.orfinishes.com {
    reverse_proxy dashboard:3000 {
        health_uri /api/hello
        health_interval 30s
        health_timeout 5s
    }
    
    encode gzip
    
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }
    
    try_files {path} /
    
    @static {
        path *.js *.css *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000"
}
